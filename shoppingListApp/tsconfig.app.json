/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "paths": {
      "@app/*": ["src/app/*"],
      "@app_shared/*": ["src/app/_shared/*"],
      "@app_error_mngt/*": ["src/app/_shared/error-management/*"],
      "@app_auth/*": ["src/app/_shared/authentication/*"],
      "@app_business/*": ["src/app/_shared/business/*"],
      "@env/*": ["src/environments/*"]
    },
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
