/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "paths": {
      // Env
      "@env/*": ["src/environments/*"],

      // App
      "@app/*": ["src/app/*"],
      "@app_helper/*": ["src/app/_helper/*"],
      "@app_model/*": ["src/app/_model/*"],
      "@app_enum/*": ["src/app/_model/enum/*"],
      "@app_service/*": ["src/app/_service/*"],
      "@app_module/*": ["src/app/_module/*"],

      // Feature Module
      "@app_account/*": ["src/app/account/*"],
      "@app_shoppingList/*": ["src/app/shopping-list/*"],

      // Technical Module
      "@action/*": ["src/app/_module/action/*"],
      "@alert/*": ["src/app/_module/alert/*"],
      "@form/*": ["src/app/_module/form/*"],
      "@layout/*": ["src/app/_module/layout/*"],
      "@loader/*": ["src/app/_module/loader/*"],
      "@material/*": ["src/app/_module/material/*"],
      "@timer/*": ["src/app/_module/timer/*"],
      "@mod_store/*": ["src/app/_module/store/*"],
    },
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
