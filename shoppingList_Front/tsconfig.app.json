/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "paths": {
      // Env
      "@env/*": ["src/environments/*"],

      // App
      "@app/*": ["src/app/_core/*"],
      "@app_helper/*": ["src/app/_helper/*"],
      "@module/*": ["src/_module/*"],

      // App Feature
      "@account/*": ["src/app/account/*"],
      "@product/*": ["src/app/product/*"],
      "@shoppingList/*": ["src/app/shopping-list/*"],

      // App Module
      "@action/*": ["src/_module/action/*"],
      "@alert/*": ["src/_module/alert/*"],
      "@enum/*": ["src/_module/enum/*"],
      "@form/*": ["src/_module/form/*"],
      "@layout/*": ["src/_module/layout/*"],
      "@loader/*": ["src/_module/loader/*"],
      "@material/*": ["src/_module/material/*"],
      "@router/*": ["src/_module/router/*"],
      "@timer/*": ["src/_module/timer/*"],
      "@token/*": ["src/_module/token/*"],
    },
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
