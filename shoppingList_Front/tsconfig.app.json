/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "paths": {
      /* Source */
      "@module/*": ["src/_module/*"],
      "@env/*": ["src/environments/*"],
      "@app/*": ["src/app/*"],

      /* Feature */
      "@core/*": ["src/app/_core/*"],
      "@demo/*": ["src/app/_demo/*"],
      "@account/*": ["src/app/account/*"],
      "@enterprise/*": ["src/app/enterprise/*"],
      "@shoppingList/*": ["src/app/shopping-list/*"],

      /* Module */
      "@action/*": ["src/_module/action/*"],
      "@alert/*": ["src/_module/alert/*"],
      "@enum/*": ["src/_module/enum/*"],
      "@form/*": ["src/_module/form/*"],
      "@loader/*": ["src/_module/loader/*"],
      "@material/*": ["src/_module/material/*"],
      "@router/*": ["src/_module/router/*"],
      "@timer/*": ["src/_module/timer/*"],
      "@token/*": ["src/_module/token/*"]
    },
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
