/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      // Env
      "@env/*": ["src/environments/*"],

      // App
      "@app/*": ["src/app/*"],
      "@app_helper/*": ["src/app/_helper/*"],

      // Feature
      "@app_account/*": ["src/app/account/*"],
      "@app_shoppingList/*": ["src/app/shopping-list/*"],

      // Store
      "@app_effect/*": ["src/app/_store/effect/*"],
      "@app_selector/*": ["src/app/_store/selector/*"],
      "@account_store/*": ["src/app/account/_store/*"],
      "@shoppingList_store/*": ["src/app/shopping-list/_store/*"],
      "@alert_store/*": ["src/app/_module/alert/_store/*"],
      "@loader_store/*": ["src/app/_module/loader/_store/*"],

      // Model
      "@app_model/*": ["src/app/_model/*"],
      "@app_enum/*": ["src/app/_model/enum/*"],

      // Service
      "@app_service/*": ["src/app/_service/*"],

      // Module
      "@app_module/*": ["src/app/_module/*"],
      "@app_alert/*": ["src/app/_module/alert/*"],
      "@app_form/*": ["src/app/_module/form/*"],
      "@app_layout/*": ["src/app/_module/layout/*"],
      "@app_loader/*": ["src/app/_module/loader/*"],
      "@app_material/*": ["src/app/_module/material/*"],
      "@app_action/*": ["src/app/_module/store/action/*"],
      "@mod_store/*": ["src/app/_module/store/*"],
    },
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
  }
}
